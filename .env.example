# =============================================================================
# Code Bot - 환경 설정 파일
# =============================================================================
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요.
# cp .env.example .env

# -----------------------------------------------------------------------------
# LLM Configuration (OpenAI 호환 API)
# -----------------------------------------------------------------------------
# OpenAI, Azure OpenAI, LocalAI 등 OpenAI 호환 API 사용 가능
LLM_API_KEY=your-api-key-here
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# Embedding Configuration
# -----------------------------------------------------------------------------
# 코드 임베딩 모델. Jina Code v2 권장 (코드 특화 모델)
EMBEDDING_MODEL=jinaai/jina-embeddings-v2-base-code
# cpu: 기본값 | cuda: NVIDIA GPU | mps: Apple Silicon
EMBEDDING_DEVICE=cpu

# -----------------------------------------------------------------------------
# Reranking Configuration
# -----------------------------------------------------------------------------
# 벡터 검색 후 리랭킹으로 정확도 향상
RERANK_MODEL=ms-marco-MiniLM-L-12-v2
# 벡터 검색 시 가져올 문서 수 (리랭킹 전)
RETRIEVE_TOP_K=100
# 리랭킹 후 최종 반환할 문서 수
RERANK_TOP_N=30
# 리랭킹 입력 최대 길이 (성능 튜닝용)
RERANK_MAX_LENGTH=128

# -----------------------------------------------------------------------------
# Codebase Configuration
# -----------------------------------------------------------------------------
# 인덱싱할 코드베이스 절대 경로
CODEBASE_PATH=/path/to/your/codebase
# ChromaDB 컬렉션 이름 (프로젝트별로 다르게 설정)
COLLECTION_NAME=your-codebase
# 벡터 DB 저장 경로
CHROMA_DB_PATH=./data/chroma

# -----------------------------------------------------------------------------
# Analytics Configuration (선택사항)
# -----------------------------------------------------------------------------
# Analytics 데이터를 가져올 게이트웨이 URL
# /api/analytics 엔드포인트 사용 시 필요
ANALYTICS_GATEWAY_URL=https://your-analytics-gateway.example.com

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
# 개발 시 true로 설정하면 코드 변경 시 자동 리로드
API_RELOAD=true

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# DEBUG, INFO, WARNING, ERROR 중 선택
LOG_LEVEL=INFO
